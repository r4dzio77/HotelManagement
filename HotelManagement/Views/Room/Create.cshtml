@model HotelManagement.Models.Room

@{
    ViewData["Title"] = "Dodaj pokój";
    var roomTypes = ViewBag.RoomTypes as List<HotelManagement.Models.RoomType>;
}

<h2>Dodaj nowy pokój</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Number">Numer pokoju</label>
        <input asp-for="Number" class="form-control" />
        <span asp-validation-for="Number" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Floor">Piętro</label>
        <input asp-for="Floor" type="number" class="form-control" />
        <span asp-validation-for="Floor" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Capacity">Pojemność</label>
        <input asp-for="Capacity" type="number" class="form-control" />
        <span asp-validation-for="Capacity" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PricePerNight">Cena za noc (PLN)</label>
        <input asp-for="PricePerNight" class="form-control" />
        <span asp-validation-for="PricePerNight" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description">Opis</label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="RoomTypeId">Typ pokoju</label>
        <select asp-for="RoomTypeId" class="form-control" asp-items="@(new SelectList(roomTypes, "Id", "Name"))">
            <option value="">-- Wybierz typ pokoju --</option>
        </select>
        <span asp-validation-for="RoomTypeId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Zapisz</button>
</form>
