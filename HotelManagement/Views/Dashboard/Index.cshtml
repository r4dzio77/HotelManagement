@using System.Globalization
@model HotelManagement.ViewModels.DashboardViewModel

@{
    ViewData["Title"] = "Dashboard";
    var pl = new CultureInfo("pl-PL");
    var bizDate = Model.BusinessDate;

    var chatWaitingCount = ViewBag.ChatWaitingCount as int? ?? 0;
    var chatWaitingList = ViewBag.ChatWaitingList as IEnumerable<HotelManagement.Models.ChatConversation>
                          ?? Enumerable.Empty<HotelManagement.Models.ChatConversation>();

    var todayShifts = ViewBag.TodayShifts as IEnumerable<HotelManagement.Models.WorkShift>
                      ?? Enumerable.Empty<HotelManagement.Models.WorkShift>();

    var dirtyRooms = ViewBag.DirtyRoomsCount as int? ?? 0;
    var blockedRooms = ViewBag.BlockedRoomsCount as int? ?? 0;

    var occupancy = ViewBag.OccupancyPercent as int? ?? 0;
    var occupiedRooms = ViewBag.OccupiedRooms as int? ?? 0;
    var totalRooms = ViewBag.TotalRooms as int? ?? 0;

    var dailyTasks = ViewBag.DailyTasks as IEnumerable<HotelManagement.Models.DailyTask>
                     ?? Enumerable.Empty<HotelManagement.Models.DailyTask>();

    var isManager = User.IsInRole("Kierownik");
}

@section Styles {
    <style>
        /* ====== LAYOUT ====== */
        .dashboard {
            background: #f6f7fb;
            min-height: 100vh;
            padding: 2.5rem 2rem 3rem;
        }

        .dashboard-header {
            display: flex;
            justify-content: space-between;
            align-items: flex-end;
            margin-bottom: 2.2rem;
        }

        .dashboard-title {
            font-size: 1.9rem;
            font-weight: 700;
            letter-spacing: -.02em;
            color: #0f172a;
        }

        .dashboard-subtitle {
            font-size: .85rem;
            color: #64748b;
        }

        .dashboard-date {
            font-size: .85rem;
            padding: .45rem .9rem;
            border-radius: 999px;
            background: #ffffff;
            border: 1px solid rgba(148,163,184,.35);
            color: #334155;
        }

        /* ====== GRID ====== */
        .dashboard-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit,minmax(280px,1fr));
            gap: 1.4rem;
        }

        /* ====== CARD ====== */
        .card {
            background: #ffffff;
            border-radius: 1.25rem;
            padding: 1.35rem 1.4rem 1.5rem;
            border: 1px solid rgba(148,163,184,.25);
            box-shadow: 0 18px 45px rgba(15,23,42,.08);
            display: flex;
            flex-direction: column;
            gap: 1rem;
            transition: .18s ease;
        }

            .card:hover {
                transform: translateY(-2px);
                box-shadow: 0 22px 55px rgba(15,23,42,.14);
            }

        /* ====== HEADERS ====== */
        .card-header {
            display: flex;
            flex-direction: column;
            gap: .15rem;
        }

        .card-title {
            font-size: .95rem;
            font-weight: 600;
            color: #0f172a;
        }

        .card-subtitle {
            font-size: .75rem;
            color: #64748b;
        }

        /* ====== KPI ====== */
        .kpi {
            font-size: 2.4rem;
            font-weight: 700;
            letter-spacing: -.03em;
            color: #0f172a;
        }

        .kpi-danger {
            color: #dc2626;
        }

        /* ====== LISTS ====== */
        .list {
            list-style: none;
            padding: 0;
            margin: 0;
        }

            .list li {
                display: flex;
                justify-content: space-between;
                align-items: center;
                font-size: .8rem;
                padding: .35rem 0;
                color: #334155;
            }

        .list-muted {
            font-size: .75rem;
            color: #64748b;
        }

        /* ====== BADGES ====== */
        .badge {
            font-size: .65rem;
            padding: .15rem .55rem;
            border-radius: 999px;
            font-weight: 600;
        }

        .badge-danger {
            background: rgba(220,38,38,.12);
            color: #b91c1c;
        }

        .badge-warning {
            background: rgba(245,158,11,.15);
            color: #b45309;
        }

        .badge-success {
            background: rgba(22,163,74,.15);
            color: #15803d;
        }

        /* ====== PROGRESS ====== */
        .progress {
            height: 8px;
            border-radius: 999px;
            background: #e5e7eb;
            overflow: hidden;
        }

        .progress-bar {
            height: 100%;
            background: linear-gradient(90deg,#22c55e,#16a34a);
        }

        /* ====== TODO ====== */
        .todo-done {
            text-decoration: line-through;
            color: #94a3b8;
        }
    </style>
}

<div class="dashboard">

    <div class="dashboard-header">
        <div>
            <div class="dashboard-title">Dashboard hotelu</div>
            <div class="dashboard-subtitle">
                Dzień operacyjny • @bizDate.ToString("dddd dd.MM.yyyy", pl)
            </div>
        </div>

        <div class="dashboard-date">
            @bizDate.ToString("dd.MM.yyyy")
        </div>
    </div>

    <div class="dashboard-grid">

        <!-- RUCH -->
        <div class="card">
            <div class="card-header">
                <div class="card-title">Ruch hotelowy</div>
                <div class="card-subtitle">Przyjazdy, pobyty, wyjazdy</div>
            </div>

            <ul class="list">
                <li><span>Przyjazdy</span><strong>@Model.TodayArrivals</strong></li>
                <li><span>Pobyty</span><strong>@Model.TodayStays</strong></li>
                <li><span>Wyjazdy</span><strong>@Model.TodayDepartures</strong></li>
            </ul>
        </div>

        <!-- ŚNIADANIA -->
        <div class="card">
            <div class="card-header">
                <div class="card-title">Śniadania</div>
                <div class="card-subtitle">Plan na 7 dni</div>
            </div>

            <ul class="list">
                @foreach (var b in Model.BreakfastsNext7Days)
                {
                    <li>
                        <span>@b.Date.ToString("ddd dd.MM", pl)</span>
                        <strong>@b.BreakfastCount</strong>
                    </li>
                }
            </ul>
        </div>

        <!-- CHAT -->
        <a asp-controller="Chat" asp-action="Staff" class="text-decoration-none text-dark">
            <div class="card">
                <div class="card-header">
                    <div class="card-title">Wiadomości</div>
                    <div class="card-subtitle">Czekają na odpowiedź</div>
                </div>

                <div class="kpi kpi-danger">@chatWaitingCount</div>

                @foreach (var chat in chatWaitingList.Take(3))
                {
                    <div class="list-muted d-flex justify-content-between">
                        <span>
                            @(!string.IsNullOrWhiteSpace(chat.User.FirstName)
                                                    ? $"{chat.User.FirstName} {chat.User.LastName}"
                                                    : chat.User.UserName)
                    </span>
                    <span class="badge badge-danger">NOWE</span>
                </div>
                                }
            </div>
        </a>

        <!-- GRAFIK -->
        <div class="card">
            <div class="card-header">
                <div class="card-title">Dzisiejsza obsada</div>
                <div class="card-subtitle">Kto pracuje</div>
            </div>

            <ul class="list">
                @foreach (var s in todayShifts)
                {
                    <li>
                        <span>@s.User.FirstName @s.User.LastName</span>
                        <strong>@s.StartTime:00–@s.EndTime:00</strong>
                    </li>
                }
            </ul>
        </div>

        <!-- POKOJE -->
        <a asp-controller="Housekeeping" asp-action="Floor" class="text-decoration-none text-dark">
            <div class="card">
                <div class="card-header">
                    <div class="card-title">Status pokoi</div>
                    <div class="card-subtitle">Wymagające uwagi</div>
                </div>

                <div class="d-flex justify-content-between">
                    <span>Brudne</span>
                    <span class="badge badge-warning">@dirtyRooms</span>
                </div>
                <div class="d-flex justify-content-between">
                    <span>Zablokowane</span>
                    <span class="badge badge-danger">@blockedRooms</span>
                </div>
            </div>
        </a>

        <!-- OBŁOŻENIE -->
        <div class="card">
            <div class="card-header">
                <div class="card-title">Obłożenie</div>
                <div class="card-subtitle">Aktualne</div>
            </div>

            <div class="kpi">@occupancy%</div>

            <div class="progress">
                <div class="progress-bar" style="width:@occupancy%"></div>
            </div>

            <div class="list-muted">
                @occupiedRooms / @totalRooms pokoi
            </div>
        </div>

        <!-- TODO -->
        <div class="card">
            <div class="card-header">
                <div class="card-title">To-Do na dziś</div>
                <div class="card-subtitle">Zadania zespołu</div>
            </div>

            @if (isManager)
            {
                <form asp-controller="DailyTask" asp-action="Add" method="post" class="d-flex gap-2">
                    @Html.AntiForgeryToken()
                    <input name="title" class="form-control form-control-sm" placeholder="Nowe zadanie…" />
                    <button class="btn btn-sm btn-primary">Dodaj</button>
                </form>
            }

            <ul class="list">
                @foreach (var t in dailyTasks)
                {
                    <li>
                        <span class="@(t.IsCompleted ? "todo-done" : "")">@t.Title</span>

                        <form asp-controller="DailyTask"
                              asp-action="ToggleComplete"
                              method="post">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@t.Id" />
                            <button class="btn btn-sm btn-outline-success">
                                @(t.IsCompleted ? "↺" : "✓")
                            </button>
                        </form>
                    </li>
                }
            </ul>
        </div>

    </div>
</div>
