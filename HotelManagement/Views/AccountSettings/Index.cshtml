@model HotelManagement.ViewModels.AccountSettingsViewModel

<h2>Ustawienia konta</h2>

@if (ViewBag.Message != null)
{
    <div class="alert alert-success">@ViewBag.Message</div>
}

<form asp-action="Index" method="post">
    <div class="mb-3">
        <label asp-for="FirstName" class="form-label"></label>
        <input asp-for="FirstName" class="form-control" />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="LastName" class="form-label"></label>
        <input asp-for="LastName" class="form-control" />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Email" class="form-label"></label>
        <input asp-for="Email" class="form-control" readonly />
    </div>

    <div class="mb-3">
        <label asp-for="PhoneNumber" class="form-label"></label>
        <input asp-for="PhoneNumber" class="form-control" />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Preferences" class="form-label"></label>
        <textarea asp-for="Preferences" class="form-control"></textarea>
        <span asp-validation-for="Preferences" class="text-danger"></span>
    </div>

    <hr />
    <a asp-action="ChangePassword" class="btn btn-secondary">Zmień hasło</a>


    <button type="submit" class="btn btn-primary">Zapisz zmiany</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
