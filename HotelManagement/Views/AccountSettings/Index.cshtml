@model HotelManagement.ViewModels.AccountSettingsViewModel

@{
    ViewData["Title"] = "Ustawienia konta";
}

<h2 class="mb-4">Ustawienia konta</h2>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success">
        <i class="bi bi-check-circle"></i> @TempData["Message"]
    </div>
}

<!-- ================= DANE KONTA ================= -->
<div class="card shadow-sm border-0 mb-4">
    <div class="card-header bg-light fw-semibold">
        <i class="bi bi-person-circle me-1"></i> Dane użytkownika
    </div>
    <div class="card-body">
        <dl class="row mb-0">
            <dt class="col-sm-3">Imię</dt>
            <dd class="col-sm-9">@Model.FirstName</dd>

            <dt class="col-sm-3">Nazwisko</dt>
            <dd class="col-sm-9">@Model.LastName</dd>

            <dt class="col-sm-3">Email</dt>
            <dd class="col-sm-9">@Model.Email</dd>

            <dt class="col-sm-3">Telefon</dt>
            <dd class="col-sm-9 d-flex justify-content-between align-items-center">
                <span>
                    @Html.Raw(string.IsNullOrWhiteSpace(Model.PhoneNumber) ? "<em>Brak</em>" : Model.PhoneNumber)
                </span>
                <button class="btn btn-sm btn-outline-secondary"
                        data-bs-toggle="modal"
                        data-bs-target="#editPhoneModal">
                    <i class="bi bi-pencil"></i>
                </button>
            </dd>

            <dt class="col-sm-3">Preferencje</dt>
            <dd class="col-sm-9 d-flex justify-content-between align-items-center">
                <span>
                    @Html.Raw(string.IsNullOrWhiteSpace(Model.Preferences) ? "<em>Brak</em>" : Model.Preferences)
                </span>
                <button class="btn btn-sm btn-outline-secondary"
                        data-bs-toggle="modal"
                        data-bs-target="#editPreferencesModal">
                    <i class="bi bi-pencil"></i>
                </button>
            </dd>
        </dl>
    </div>
</div>

<!-- ================= AKTYWNE REZERWACJE ================= -->
<div class="card shadow-sm border-0 mb-4">
    <div class="card-header bg-light fw-semibold">
        <i class="bi bi-calendar-check me-1"></i> Aktywne i nadchodzące rezerwacje
    </div>

    <div class="card-body p-0">
        @if (!Model.ActiveReservations.Any())
        {
            <div class="p-4 text-muted">
                <i class="bi bi-info-circle"></i> Brak aktywnych rezerwacji
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-hover mb-0 align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>#</th>
                            <th>Pokój</th>
                            <th>Typ</th>
                            <th>Pobyt</th>
                            <th>Status</th>
                            <th class="text-end">Akcje</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var r in Model.ActiveReservations)
                        {
                            var isOngoing = DateTime.Today >= r.CheckIn.Date &&
                            DateTime.Today < r.CheckOut.Date;

                            <tr>
                                <td>@r.Id</td>
                                <td>@(r.Room?.Number ?? "—")</td>
                                <td>@r.RoomType?.Name</td>
                                <td>
                                    @r.CheckIn.ToString("dd.MM.yyyy")
                                    –
                                    @r.CheckOut.ToString("dd.MM.yyyy")
                                </td>
                                <td>
                                    @if (isOngoing)
                                    {
                                        <span class="badge bg-success">Trwa</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-primary">Nadchodząca</span>
                                    }
                                </td>
                                <td class="text-end">
                                    <a asp-controller="Reservation"
                                       asp-action="Details"
                                       asp-route-id="@r.Id"
                                       class="btn btn-sm btn-outline-primary me-1"
                                       title="Szczegóły">
                                        <i class="bi bi-eye"></i>
                                    </a>

                                    @if (r.CheckIn.Date > DateTime.Today)
                                    {
                                        <form asp-controller="Reservation"
                                              asp-action="Cancel"
                                              asp-route-id="@r.Id"
                                              method="post"
                                              class="d-inline"
                                              onsubmit="return confirm('Czy na pewno chcesz anulować rezerwację?');">
                                            @Html.AntiForgeryToken()
                                            <button type="submit"
                                                    class="btn btn-sm btn-outline-danger"
                                                    title="Anuluj rezerwację">
                                                <i class="bi bi-x-circle"></i>
                                            </button>
                                        </form>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>

<!-- ================= ZAKOŃCZONE REZERWACJE / OPINIE ================= -->
<div class="card shadow-sm border-0 mb-4">
    <div class="card-header bg-light fw-semibold">
        <i class="bi bi-star me-1"></i> Zakończone rezerwacje
    </div>

    <div class="card-body p-0">
        @if (!Model.PastReservations.Any())
        {
            <div class="p-4 text-muted">
                <i class="bi bi-info-circle"></i> Brak zakończonych rezerwacji
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-hover mb-0 align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>#</th>
                            <th>Pokój</th>
                            <th>Pobyt</th>
                            <th class="text-end">Opinia</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var r in Model.PastReservations)
                        {
                            <tr>
                                <td>@r.Id</td>
                                <td>@r.RoomType?.Name</td>
                                <td>
                                    @r.CheckIn.ToString("dd.MM.yyyy")
                                    –
                                    @r.CheckOut.ToString("dd.MM.yyyy")
                                </td>
                                <td class="text-end">
                                    @if (r.Review == null)
                                    {
                                        <a asp-controller="Review"
                                           asp-action="Create"
                                           asp-route-reservationId="@r.Id"
                                           class="btn btn-sm btn-outline-success">
                                            <i class="bi bi-star"></i> Dodaj opinię
                                        </a>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success">
                                            <i class="bi bi-check-circle"></i> Opinia dodana
                                        </span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>

<!-- ================= AKCJE ================= -->
<div class="mt-4">
    <a asp-action="ChangePassword" class="btn btn-secondary">
        <i class="bi bi-key"></i> Zmień hasło
    </a>

    <a asp-action="Loyalty" class="btn btn-outline-primary ms-2">
        <i class="bi bi-stars"></i> Program lojalnościowy
    </a>
</div>

