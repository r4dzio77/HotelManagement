@model HotelManagement.ViewModels.ReservationGuestViewModel

@using HotelManagement.Data
@using HotelManagement.Models
@using Microsoft.AspNetCore.Identity
@inject HotelManagementContext DbContext
@inject UserManager<ApplicationUser> UserManager

@{
    ViewData["Title"] = "Dane osobowe do rezerwacji";

    // pobieramy roomType, liczymy noce itd.
    var roomType = await DbContext.RoomTypes.FindAsync(Model.RoomTypeId);
    var nights = (Model.CheckOut.Date - Model.CheckIn.Date).TotalDays;
    if (nights < 1) nights = 1;

    decimal roomPricePerNight = roomType?.PricePerNight ?? 0m;
    decimal roomTotal = roomPricePerNight * (decimal)nights;

    // te same stałe co w kontrolerze
    const decimal BreakfastPriceBase = 40m;
    const decimal ParkingPriceBase = 30m;
    const decimal ExtraBedPriceBase = 80m;

    decimal breakfastTotal = Model.Breakfast
        ? BreakfastPriceBase * Model.PersonCount * (decimal)nights
        : 0m;

    decimal parkingTotal = Model.Parking
        ? ParkingPriceBase * (decimal)nights
        : 0m;

    decimal extraBedTotal = Model.ExtraBed
        ? ExtraBedPriceBase * (decimal)nights
        : 0m;

    decimal extrasTotal = breakfastTotal + parkingTotal + extraBedTotal;
    decimal subtotal = roomTotal + extrasTotal;

    // rabat lojalnościowy
    var currentUser = await UserManager.GetUserAsync(User);
    decimal loyaltyDiscount = 0m;
    int loyaltyPercent = 0;
    string? loyaltyStatus = null;

    if (currentUser?.GuestId != null)
    {
        var guest = await DbContext.Guests.FindAsync(currentUser.GuestId.Value);
        if (guest != null && guest.HasLoyaltyCard)
        {
            loyaltyDiscount = guest.GetDiscountPercentage();
            loyaltyPercent = (int)(loyaltyDiscount * 100);
            loyaltyStatus = guest.LoyaltyStatus.ToString();
        }
    }

    decimal finalTotal = subtotal * (1 - loyaltyDiscount);
    decimal totalDiscountAmount = subtotal - finalTotal;
}

<style>
    .page-wrapper {
        max-width: 1100px;
        margin: 0 auto;
    }

    .card-soft {
        border-radius: 1.25rem;
        border: 1px solid #e5e7eb;
        box-shadow: 0 10px 30px rgba(15,23,42,.06);
        background: #fff;
    }

    .summary-card {
        border-radius: 1.25rem;
        background: linear-gradient(135deg, #f9fafb, #eff6ff);
        border: 1px solid #e5e7eb;
        box-shadow: 0 10px 30px rgba(15,23,42,.05);
    }

    .summary-label {
        font-size: .8rem;
        text-transform: uppercase;
        letter-spacing: .04em;
        color: #6b7280;
        margin-bottom: 0;
    }

    .summary-value {
        font-weight: 600;
        color: #111827;
    }

    .price-line-through {
        text-decoration: line-through;
        color: #9ca3af;
        font-size: .9rem;
    }

    .payment-option-card {
        border-radius: .75rem;
        border: 1px solid #e5e7eb;
        padding: .75rem 1rem;
        display: flex;
        align-items: center;
        gap: .75rem;
        cursor: pointer;
    }

        .payment-option-card:hover {
            border-color: #818cf8;
            background: #f5f5ff;
        }
</style>

<div class="container py-4 page-wrapper">
    <div class="mb-4">
        <h2 class="mb-1">Dane osobowe</h2>
        <p class="text-muted mb-0">
            Uzupełnij swoje dane, a następnie wybierz sposób płatności.
        </p>
    </div>

    <div class="row g-4">
        <!-- FORMULARZ DANYCH -->
        <div class="col-12 col-lg-7">
            <div class="card-soft p-4">
                <form asp-action="EnterGuestDetails" method="post">
                    @* Ukryte dane rezerwacji *@
                    <input type="hidden" asp-for="RoomTypeId" />
                    <input type="hidden" asp-for="CheckIn" />
                    <input type="hidden" asp-for="CheckOut" />
                    <input type="hidden" asp-for="PersonCount" />
                    <input type="hidden" asp-for="Breakfast" />
                    <input type="hidden" asp-for="Parking" />
                    <input type="hidden" asp-for="ExtraBed" />

                    <div class="mb-3">
                        <label asp-for="FirstName" class="form-label">Imię</label>
                        <input asp-for="FirstName" class="form-control" />
                        <span asp-validation-for="FirstName" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="LastName" class="form-label">Nazwisko</label>
                        <input asp-for="LastName" class="form-control" />
                        <span asp-validation-for="LastName" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Email" class="form-label">Email</label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="PhoneNumber" class="form-label">Telefon</label>
                        <input asp-for="PhoneNumber" class="form-control" />
                        <span asp-validation-for="PhoneNumber" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Preferences" class="form-label">Preferencje (opcjonalne)</label>
                        <textarea asp-for="Preferences" class="form-control" rows="3"></textarea>
                    </div>

                    <hr class="my-4" />

                    <h5 class="mb-3">Sposób płatności</h5>

                    <div class="mb-3">
                        <label class="w-100">
                            <div class="payment-option-card">
                                <input type="radio" name="paymentOption" value="online" class="form-check-input" checked />
                                <div>
                                    <div class="fw-semibold">
                                        Zapłać teraz online (Stripe)
                                    </div>
                                    <div class="small text-muted">
                                        Karta, BLIK, przelew online – bezpieczna płatność obsługiwana przez Stripe.
                                    </div>
                                </div>
                            </div>
                        </label>
                    </div>

                    <div class="mb-3">
                        <label class="w-100">
                            <div class="payment-option-card">
                                <input type="radio" name="paymentOption" value="onsite" class="form-check-input" />
                                <div>
                                    <div class="fw-semibold">
                                        Zapłacę na miejscu w hotelu
                                    </div>
                                    <div class="small text-muted">
                                        Rezerwacja zostanie potwierdzona, a płatności dokonasz przy zameldowaniu.
                                    </div>
                                </div>
                            </div>
                        </label>
                    </div>

                    <div class="d-flex gap-2 justify-content-between align-items-center mt-4">
                        <a asp-action="Index" asp-controller="RoomType" class="btn btn-outline-secondary">
                            Anuluj
                        </a>
                        <button type="submit" class="btn btn-primary">
                            Potwierdź dane i przejdź dalej
                        </button>
                    </div>
                </form>
            </div>
        </div>

        <!-- PODSUMOWANIE PO PRAWEJ -->
        <div class="col-12 col-lg-5">
            <div class="summary-card p-4">
                <h5 class="mb-3">
                    <i class="bi bi-clipboard-check me-1"></i> Twoja rezerwacja
                </h5>

                <div class="mb-3">
                    <p class="summary-label mb-1">Daty pobytu</p>
                    <div class="summary-value">
                        @Model.CheckIn.ToString("dd.MM.yyyy") – @Model.CheckOut.ToString("dd.MM.yyyy")
                    </div>
                    <div class="small text-muted">
                        Łącznie: <strong>@nights</strong> @(nights == 1 ? "noc" : "noce")
                    </div>
                </div>

                @if (roomType != null)
                {
                    <div class="mb-3">
                        <p class="summary-label mb-1">Pokój</p>
                        <div class="summary-value">
                            @roomType.Name
                        </div>
                        <div class="small text-muted">
                            <i class="bi bi-people me-1"></i>Maks. @roomType.Capacity osób
                        </div>
                    </div>
                }

                <hr />

                <div class="mb-2">
                    <p class="summary-label mb-1">Koszt noclegu</p>
                    <div class="d-flex justify-content-between">
                        <span class="small text-muted">
                            @roomPricePerNight.ToString("0.00") zł / noc × @nights
                        </span>
                        <span class="summary-value">
                            @roomTotal.ToString("0.00") zł
                        </span>
                    </div>
                </div>

                @if (breakfastTotal > 0 || parkingTotal > 0 || extraBedTotal > 0)
                {
                    <div class="mb-2">
                        <p class="summary-label mb-1">Usługi dodatkowe</p>

                        @if (breakfastTotal > 0)
                        {
                            <div class="d-flex justify-content-between small">
                                <span>Śniadanie (@Model.PersonCount os. × @nights nocy)</span>
                                <span>@breakfastTotal.ToString("0.00") zł</span>
                            </div>
                        }
                        @if (parkingTotal > 0)
                        {
                            <div class="d-flex justify-content-between small">
                                <span>Parking (@nights nocy)</span>
                                <span>@parkingTotal.ToString("0.00") zł</span>
                            </div>
                        }
                        @if (extraBedTotal > 0)
                        {
                            <div class="d-flex justify-content-between small">
                                <span>Dostawka (@nights nocy)</span>
                                <span>@extraBedTotal.ToString("0.00") zł</span>
                            </div>
                        }
                    </div>
                }

                <hr />

                <div class="mb-2">
                    <div class="d-flex justify-content-between">
                        <span class="summary-label mb-0">Suma przed rabatem</span>
                        <span class="small text-muted">
                            @subtotal.ToString("0.00") zł
                        </span>
                    </div>
                </div>

                @if (loyaltyDiscount > 0)
                {
                    <div class="mb-2">
                        <div class="d-flex justify-content-between">
                            <span class="small text-muted">
                                Rabat lojalnościowy (@loyaltyPercent% @if (!string.IsNullOrEmpty(loyaltyStatus)) {
                                @($" - {loyaltyStatus}")
                            }
)
                        </span>
                        <span class="text-success">
                            -@totalDiscountAmount.ToString("0.00") zł
                        </span>
                    </div>
                </div>
                                }

                <div class="mt-3">
                    <div class="d-flex justify-content-between align-items-baseline">
                        <span class="summary-label mb-0">Do zapłaty</span>
                        <div class="text-end">
                            <div class="fs-4 fw-bold">
                                @finalTotal.ToString("0.00") zł
                            </div>
                            <div class="small text-muted">
                                za cały pobyt (pokój + usługi dodatkowe)
                            </div>
                        </div>
                    </div>
                </div>

                <div class="mt-3 small text-muted">
                    Ostateczne naliczenie oraz numer rezerwacji pojawią się po potwierdzeniu płatności.
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
