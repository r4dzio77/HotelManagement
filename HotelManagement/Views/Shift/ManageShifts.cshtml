@model HotelManagement.ViewModels.ManageShiftsViewModel
@{
    ViewData["Title"] = "Zarządzanie grafikami";
}

<h2>Zarządzanie grafikami</h2>

@if (TempData["Message"] != null)
{
        <div class="alert alert-success">@TempData["Message"]</div>
}

<h3>Dyspozycje pracowników</h3>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Pracownik</th>
            <th>Data</th>
            <th>Nie może pracować w dzień</th>
            <th>Nie może pracować w nocy</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var emp in Model.Employees)
        {
            var empPrefs = Model.Preferences.Where(p => p.UserId == emp.Id).OrderBy(p => p.Date);
            foreach (var pref in empPrefs)
            {
                    <tr>
                        <td>@emp.FirstName @emp.LastName</td>
                        <td>@pref.Date.ToString("yyyy-MM-dd")</td>
                        <td>@pref.CannotWorkDay</td>
                        <td>@pref.CannotWorkNight</td>
                    </tr>
            }
        }
    </tbody>
</table>

<div class="mt-3">
    <a asp-action="AddEmployee" class="btn btn-primary">Dodaj pracownika</a>
</div>
