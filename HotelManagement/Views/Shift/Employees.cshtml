@using Microsoft.AspNetCore.Identity
@model IEnumerable<HotelManagement.Models.ApplicationUser>
@{
    ViewData["Title"] = "Pracownicy";
    Layout = "_Layout";
}

<h1 class="mb-3">Pracownicy</h1>

@if (TempData["Message"] is string msg)
{
        <div class="alert alert-success">@msg</div>
}
@if (TempData["Error"] is string err)
{
        <div class="alert alert-danger">@err</div>
}

<div class="card mb-4">
    <div class="card-header">Dodaj nowego pracownika</div>
    <div class="card-body">
        <form asp-action="AddEmployee" method="post">
            @Html.AntiForgeryToken()
            <div class="row g-3">
                <div class="col-md-3">
                    <label class="form-label">Imię</label>
                    <input name="firstName" class="form-control" required />
                </div>
                <div class="col-md-3">
                    <label class="form-label">Nazwisko</label>
                    <input name="lastName" class="form-control" required />
                </div>
                <div class="col-md-3">
                    <label class="form-label">E-mail (login)</label>
                    <input name="email" type="email" class="form-control" required />
                </div>
                <div class="col-md-3">
                    <label class="form-label">Hasło</label>
                    <input name="password" type="password" class="form-control" required />
                </div>
            </div>
            <div class="mt-3">
                <button class="btn btn-primary" type="submit">Dodaj</button>
            </div>
        </form>
    </div>
</div>

<div class="card">
    <div class="card-header">Lista pracowników</div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-striped table-hover mb-0 align-middle">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Imię i nazwisko</th>
                        <th>Login (UserName)</th>
                        <th>E-mail</th>
                        <th style="width: 1%"></th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        var i = 1;
                        foreach (var u in Model ?? Enumerable.Empty<HotelManagement.Models.ApplicationUser>())
                        {
                                <tr>
                                    <td>@i</td>
                                    <td>@($"{u?.FirstName} {u?.LastName}")</td>
                                    <td>@u?.UserName</td>
                                    <td>@u?.Email</td>
                                    <td class="text-nowrap">
                                        <form asp-action="DeleteEmployee" method="post" onsubmit="return confirm('Usunąć pracownika?');" class="d-inline">
                                        @Html.AntiForgeryToken()
                                            <input type="hidden" name="id" value="@u?.Id" />
                                            <button type="submit" class="btn btn-sm btn-outline-danger">Usuń</button>
                                        </form>
                                    </td>
                                </tr>
                            i++;
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
