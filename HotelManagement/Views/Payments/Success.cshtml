@model HotelManagement.Models.Reservation

@{
    ViewData["Title"] = "Płatność zakończona";
}

<div class="container mt-5 text-center">
    <h2 class="text-success">
        <i class="bi bi-check-circle-fill me-2"></i>
        Płatność zakończona sukcesem!
    </h2>

    <p class="mt-3 fs-5">
        Dziękujemy za opłacenie rezerwacji.
    </p>

    @if (Model == null)
    {
        <div class="alert alert-info mt-4">
            Nie udało się pobrać szczegółów rezerwacji, ale płatność została
            poprawnie zrealizowana. W razie wątpliwości skontaktuj się z recepcją.
        </div>
    }
    else
    {
        <div class="card shadow-sm mt-4 mx-auto" style="max-width: 600px;">
            <div class="card-body text-start">
                <h5 class="card-title mb-3">Szczegóły rezerwacji</h5>

                <p>
                    <strong>Rezerwacja ID:</strong> @Model.Id
                </p>
                <p>
                    <strong>Typ pokoju:</strong> @Model.RoomType?.Name
                </p>
                <p>
                    <strong>Gość:</strong>
                    @Model.Guest?.FirstName @Model.Guest?.LastName
                </p>
                <p>
                    <strong>Przyjazd:</strong> @Model.CheckIn.ToString("dd.MM.yyyy")
                </p>
                <p>
                    <strong>Wyjazd:</strong> @Model.CheckOut.ToString("dd.MM.yyyy")
                </p>

                <p class="mt-3 fs-5">
                    <strong>Opłacono:</strong>
                    @Model.TotalPrice.ToString("0.00") zł
                </p>
            </div>
        </div>
    }

    <a asp-controller="Home" asp-action="Index" class="btn btn-primary mt-4">
        Wróć na stronę główną
    </a>
</div>
