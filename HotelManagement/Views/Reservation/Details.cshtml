@model HotelManagement.Models.Reservation
@using HotelManagement.Enums

@{
    ViewData["Title"] = "Szczegóły rezerwacji";
    bool canEdit = Model.Status == ReservationStatus.Confirmed;
}

<div class="container mt-4">

    <!-- HEADER -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-1">
                <i class="bi bi-receipt me-2"></i>
                Szczegóły rezerwacji
            </h2>
            <p class="text-muted mb-0">
                Rezerwacja #@Model.Id
            </p>
        </div>

        <div class="d-flex gap-2">
            @if (canEdit)
            {
                <a asp-action="Edit"
                   asp-route-id="@Model.Id"
                   class="btn btn-primary">
                    <i class="bi bi-pencil me-1"></i>
                    Edytuj rezerwację
                </a>
            }

            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left me-1"></i>
                Powrót
            </a>
        </div>
    </div>

    <!-- BLOKADA EDYCJI -->
    @if (!canEdit)
    {
        <div class="alert alert-warning d-flex align-items-center mb-3">
            <i class="bi bi-lock-fill me-2"></i>
            Ta rezerwacja jest w trakcie lub została zakończona – edycja danych jest zablokowana.
        </div>
    }

    <!-- KARTA -->
    <div class="card shadow-sm border-0">
        <div class="card-body">

            <!-- STATUS -->
            <div class="mb-4">
                <span class="badge fs-6
                    @(Model.Status == ReservationStatus.Confirmed ? "bg-primary" :
                                            Model.Status == ReservationStatus.CheckedIn ? "bg-warning text-dark" :
                                            Model.Status == ReservationStatus.CheckedOut ? "bg-success" :
                                            "bg-secondary")">
                    @Model.Status
                </span>
            </div>

            <!-- GOŚĆ -->
            <h5 class="mb-3">
                <i class="bi bi-person-circle me-2 text-primary"></i>
                Dane gościa
            </h5>

            <div class="row mb-4">
                <div class="col-md-6">
                    <label class="form-label">Imię i nazwisko</label>
                    <div class="form-control bg-light">
                        @Model.Guest.FirstName @Model.Guest.LastName
                    </div>
                </div>

                <div class="col-md-6">
                    <label class="form-label">E-mail</label>
                    <div class="form-control bg-light">
                        @(Model.Guest.Email ?? "—")
                    </div>
                </div>
            </div>

            <!-- POBYT -->
            <h5 class="mb-3">
                <i class="bi bi-door-open me-2 text-primary"></i>
                Informacje o pobycie
            </h5>

            <div class="row mb-4">
                <div class="col-md-4">
                    <label class="form-label">Pokój</label>
                    <div class="form-control bg-light">
                        @(Model.Room?.Number ?? "Brak")
                    </div>
                </div>

                <div class="col-md-4">
                    <label class="form-label">Typ pokoju</label>
                    <div class="form-control bg-light">
                        @Model.RoomType?.Name
                    </div>
                </div>

                <div class="col-md-4">
                    <label class="form-label">Liczba osób</label>
                    <div class="form-control bg-light">
                        @Model.PersonCount
                    </div>
                </div>
            </div>

            <div class="row mb-4">
                <div class="col-md-6">
                    <label class="form-label">Check-in</label>
                    <div class="form-control bg-light">
                        @Model.CheckIn.ToString("dd.MM.yyyy")
                    </div>
                </div>

                <div class="col-md-6">
                    <label class="form-label">Check-out</label>
                    <div class="form-control bg-light">
                        @Model.CheckOut.ToString("dd.MM.yyyy")
                    </div>
                </div>
            </div>

            <!-- USŁUGI -->
            <h5 class="mb-3">
                <i class="bi bi-bag-check me-2 text-primary"></i>
                Usługi dodatkowe
            </h5>

            <div class="row mb-4">
                <div class="col-md-3">
                    <span class="badge @(Model.Breakfast ? "bg-success" : "bg-secondary")">
                        Śniadanie
                    </span>
                </div>
                <div class="col-md-3">
                    <span class="badge @(Model.Parking ? "bg-success" : "bg-secondary")">
                        Parking
                    </span>
                </div>
                <div class="col-md-3">
                    <span class="badge @(Model.ExtraBed ? "bg-success" : "bg-secondary")">
                        Dodatkowe łóżko
                    </span>
                </div>
                <div class="col-md-3">
                    <span class="badge @(Model.Pet ? "bg-success" : "bg-secondary")">
                        Zwierzę
                    </span>
                </div>
            </div>

            <!-- PŁATNOŚĆ -->
            <h5 class="mb-3">
                <i class="bi bi-credit-card me-2 text-primary"></i>
                Płatność
            </h5>

            <div class="row mb-4">
                <div class="col-md-4">
                    <label class="form-label">Opłacona online</label>
                    <div>
                        <span class="badge @(Model.IsPaidOnline ? "bg-success" : "bg-danger")">
                            @(Model.IsPaidOnline ? "Tak" : "Nie")
                        </span>
                    </div>
                </div>

                <div class="col-md-4">
                    <label class="form-label">Metoda płatności</label>
                    <div class="form-control bg-light">
                        @(Model.PaymentMethod ?? "—")
                    </div>
                </div>

                <div class="col-md-4">
                    <label class="form-label">Status płatności</label>
                    <div class="form-control bg-light">
                        @(Model.PaymentStatus ?? "—")
                    </div>
                </div>
            </div>

            <!-- CENA -->
            <h5 class="mb-3">
                <i class="bi bi-cash-stack me-2 text-primary"></i>
                Rozliczenie
            </h5>

            <div class="row">
                <div class="col-md-6">
                    <label class="form-label">Cena całkowita</label>
                    <div class="form-control bg-light fw-bold fs-5">
                        @Model.TotalPrice.ToString("N2") zł
                    </div>
                </div>
            </div>

        </div>

        <div class="card-footer bg-white text-end">
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left me-1"></i>
                Powrót do listy
            </a>
        </div>
    </div>
</div>
