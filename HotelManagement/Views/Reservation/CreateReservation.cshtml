@model HotelManagement.Models.ReservationViewModel

@{
    ViewData["Title"] = "Ustal szczegóły rezerwacji";
}

<h2>Ustal szczegóły rezerwacji</h2>

<form asp-action="CreateReservation" method="post">
    @Html.AntiForgeryToken()

    <!-- Dane gościa -->
    <h4 class="mt-4">Dane gościa</h4>

    <div class="form-group">
        <label asp-for="Guest.FirstName"></label>
        <input asp-for="Guest.FirstName" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label asp-for="Guest.LastName"></label>
        <input asp-for="Guest.LastName" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label asp-for="Guest.Email"></label>
        <input asp-for="Guest.Email" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label asp-for="Guest.PhoneNumber"></label>
        <input asp-for="Guest.PhoneNumber" class="form-control" readonly />
    </div>

    <hr />

    <!-- Dane rezerwacji -->
    <h4 class="mt-4">Dane rezerwacji</h4>

    <div class="form-group">
        <label asp-for="Reservation.RoomTypeId">Typ pokoju</label>
        <select asp-for="Reservation.RoomTypeId" asp-items="Model.RoomTypes" class="form-control"></select>
    </div>

    <div class="form-group">
        <label asp-for="RoomNumber">Pokój</label>
        <select asp-for="RoomNumber" asp-items="Model.AvailableRooms" class="form-control"></select>
    </div>

    <div class="form-group">
        <label asp-for="Reservation.CheckIn">Data zameldowania</label>
        <input asp-for="Reservation.CheckIn" class="form-control" type="date" />
    </div>

    <div class="form-group">
        <label asp-for="Reservation.CheckOut">Data wymeldowania</label>
        <input asp-for="Reservation.CheckOut" class="form-control" type="date" />
    </div>

    <div class="form-check">
        <input asp-for="Breakfast" class="form-check-input" type="checkbox" />
        <label asp-for="Breakfast" class="form-check-label">Śniadanie</label>
    </div>

    <div class="form-check">
        <input asp-for="Parking" class="form-check-input" type="checkbox" />
        <label asp-for="Parking" class="form-check-label">Parking</label>
    </div>

    <div class="form-check">
        <input asp-for="ExtraBed" class="form-check-input" type="checkbox" />
        <label asp-for="ExtraBed" class="form-check-label">Dodatkowe łóżko</label>
    </div>

    <button type="submit" class="btn btn-primary mt-4">Zapisz rezerwację</button>
</form>
