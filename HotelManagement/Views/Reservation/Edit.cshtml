@model HotelManagement.ViewModels.ReservationViewModel

@{
    ViewData["Title"] = "Edytuj rezerwację";
}

<div class="container mt-4">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-1">
                <i class="bi bi-pencil-square me-2 text-primary"></i>
                Edycja rezerwacji #@Model.Reservation.Id
            </h2>
            <p class="text-muted mb-0">
                Zmiany są liczone na bieżąco – cena aktualizuje się automatycznie
            </p>
        </div>

        <a asp-action="Details" asp-route-id="@Model.Reservation.Id"
           class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Szczegóły
        </a>
    </div>

    <form asp-action="Edit" method="post">
        @Html.HiddenFor(m => m.Reservation.Id)

        <div class="card shadow-sm border-0 mb-4">
            <div class="card-header bg-light fw-semibold">
                <i class="bi bi-person-circle me-2"></i> Gość
            </div>
            <div class="card-body row g-3">
                <div class="col-md-6">
                    <label class="form-label">Imię</label>
                    <input asp-for="Guest.FirstName" class="form-control" />
                </div>
                <div class="col-md-6">
                    <label class="form-label">Nazwisko</label>
                    <input asp-for="Guest.LastName" class="form-control" />
                </div>
                <div class="col-md-6">
                    <label class="form-label">Email</label>
                    <input asp-for="Guest.Email" class="form-control" />
                </div>
                <div class="col-md-6">
                    <label class="form-label">Telefon</label>
                    <input asp-for="Guest.PhoneNumber" class="form-control" />
                </div>
            </div>
        </div>

        <div class="card shadow-sm border-0 mb-4">
            <div class="card-header bg-light fw-semibold">
                <i class="bi bi-calendar-range me-2"></i> Pobyt
            </div>
            <div class="card-body row g-3">
                <div class="col-md-4">
                    <label class="form-label">Typ pokoju</label>
                    <select asp-for="Reservation.RoomTypeId"
                            asp-items="Model.RoomTypes"
                            class="form-select"
                            id="RoomTypeId">
                    </select>
                </div>

                <div class="col-md-4">
                    <label class="form-label">Check-in</label>
                    <input asp-for="Reservation.CheckIn"
                           type="date"
                           class="form-control"
                           id="CheckIn" />
                </div>

                <div class="col-md-4">
                    <label class="form-label">Check-out</label>
                    <input asp-for="Reservation.CheckOut"
                           type="date"
                           class="form-control"
                           id="CheckOut" />
                </div>

                <div class="col-md-3">
                    <label class="form-label">Liczba osób</label>
                    <input asp-for="PersonCount"
                           type="number"
                           id="PersonCount"
                           min="1"
                           class="form-control" />
                </div>
            </div>
        </div>

        <div class="card shadow-sm border-0 mb-4">
            <div class="card-header bg-light fw-semibold">
                <i class="bi bi-bag-plus me-2"></i> Usługi dodatkowe
            </div>
            <div class="card-body row g-3">

                <div class="col-md-3">
                    <div class="form-check">
                        <input asp-for="Breakfast"
                               class="form-check-input"
                               type="checkbox"
                               id="Breakfast" />
                        <label class="form-check-label">Śniadanie</label>
                    </div>
                </div>

                <div class="col-md-3">
                    <div class="form-check">
                        <input asp-for="Parking"
                               class="form-check-input"
                               type="checkbox"
                               id="Parking" />
                        <label class="form-check-label">Parking</label>
                    </div>
                </div>

                <div class="col-md-3">
                    <div class="form-check">
                        <input asp-for="ExtraBed"
                               class="form-check-input"
                               type="checkbox"
                               id="ExtraBed" />
                        <label class="form-check-label">Dodatkowe łóżko</label>
                    </div>
                </div>

                <div class="col-md-3">
                    <div class="form-check">
                        <input asp-for="Pet"
                               class="form-check-input"
                               type="checkbox"
                               id="Pet" />
                        <label class="form-check-label">Zwierzę</label>
                    </div>
                </div>

            </div>
        </div>

        <div class="card shadow-sm border-0 mb-4">
            <div class="card-header bg-light fw-semibold">
                <i class="bi bi-cash-stack me-2"></i> Rozliczenie
            </div>
            <div class="card-body">

                <div class="d-flex justify-content-between mb-2">
                    <span>Noclegi</span>
                    <strong id="priceRoom">0.00 zł</strong>
                </div>

                <div class="d-flex justify-content-between mb-2">
                    <span>Usługi dodatkowe</span>
                    <strong id="priceServices">0.00 zł</strong>
                </div>

                <hr />

                <div class="d-flex justify-content-between fs-5">
                    <span>Razem</span>
                    <strong class="text-primary" id="priceTotal">0.00 zł</strong>
                </div>

            </div>
        </div>

        <button class="btn btn-primary btn-lg">
            <i class="bi bi-save me-2"></i> Zapisz zmiany
        </button>
    </form>
</div>

<script>
    async function updatePrice() {

        const data = {
            roomTypeId: parseInt(RoomTypeId.value),
            checkIn: CheckIn.value,
            checkOut: CheckOut.value,
            breakfast: Breakfast.checked,
            parking: Parking.checked,
            extraBed: ExtraBed.checked,
            pet: Pet.checked,
            personCount: parseInt(PersonCount.value),
            selectedServiceIds: []
        };

        const response = await fetch('/api/ReservationApi/CalculatePrice', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify(data)
        });

        if (!response.ok) return;

        const r = await response.json();

        priceRoom.innerText = r.roomPrice.toFixed(2) + " zł";
        priceServices.innerText = r.servicesPrice.toFixed(2) + " zł";
        priceTotal.innerText = r.totalPrice.toFixed(2) + " zł";
    }

    document.querySelectorAll(
        '#RoomTypeId, #CheckIn, #CheckOut, #PersonCount, #Breakfast, #Parking, #ExtraBed, #Pet'
    ).forEach(e => e.addEventListener('change', updatePrice));

    document.addEventListener("DOMContentLoaded", updatePrice);
</script>
