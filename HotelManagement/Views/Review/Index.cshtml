@model IEnumerable<HotelManagement.Models.Review>

@{
    ViewData["Title"] = "Opinie";
}

<h2 class="mb-4">Opinie gości</h2>

@if (!Model.Any())
{
    <div class="alert alert-info">
        Brak opinii do wyświetlenia.
    </div>
}
else
{
    <div class="row g-3">
        @foreach (var r in Model)
        {
            var rounded = (int)Math.Round(r.AverageRating);
            var stars = new string('★', rounded) + new string('☆', 5 - rounded);

            <div class="col-12">
                <div class="card shadow-sm border-0">
                    <div class="card-body d-flex justify-content-between align-items-center">

                        <!-- LEWA STRONA -->
                        <div>
                            <h6 class="mb-1">
                                <i class="bi bi-person-circle me-1"></i>
                                @r.Guest.FirstName @r.Guest.LastName
                            </h6>
                            <small class="text-muted">
                                <i class="bi bi-calendar-event me-1"></i>
                                @r.CreatedAt.ToString("dd.MM.yyyy")
                            </small>
                        </div>

                        <!-- ŚRODEK -->
                        <div class="text-center">
                            <div class="fw-bold text-primary">
                                @r.AverageRating.ToString("0.0")
                            </div>
                            <div class="text-warning">
                                @stars
                            </div>
                        </div>

                        <!-- PRAWA STRONA -->
                        <div>
                            <a asp-action="Details"
                               asp-route-id="@r.Id"
                               class="btn btn-sm btn-outline-primary">
                                <i class="bi bi-eye"></i>
                                Szczegóły
                            </a>
                        </div>

                    </div>
                </div>
            </div>
        }
    </div>
}
