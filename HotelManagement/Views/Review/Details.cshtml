@model HotelManagement.Models.Review

@{
    ViewData["Title"] = "Opinia gościa";
}

<h2 class="mb-4">Opinia gościa</h2>

<div class="card shadow-sm border-0 mb-4">
    <div class="card-body">

        <!-- ===== HEADER ===== -->
        <div class="d-flex justify-content-between align-items-start mb-4">
            <div>
                <h5 class="mb-1">
                    <i class="bi bi-person-circle me-1"></i>
                    @Model.Guest.FirstName @Model.Guest.LastName
                </h5>
                <small class="text-muted">
                    Dodano: @Model.CreatedAt.ToString("dd.MM.yyyy")
                </small>
            </div>

            <!-- ===== ŚREDNIA OCENA ===== -->
            <div class="text-end">
                <div class="fs-3 fw-bold text-primary">
                    @Model.AverageRating.ToString("0.0")
                </div>

                @{
                    var rounded = (int)Math.Round(Model.AverageRating);
                    var stars = new string('★', rounded) + new string('☆', 5 - rounded);
                }

                <div class="text-warning fs-5">
                    @stars
                </div>

                <small class="text-muted">średnia ocena</small>
            </div>
        </div>

        <hr />

        <!-- ===== OCENY SZCZEGÓŁOWE ===== -->
        <div class="mb-4">
            <h6 class="fw-semibold mb-3">
                <i class="bi bi-bar-chart-fill me-1"></i>
                Oceny szczegółowe
            </h6>

            @foreach (var r in Model.Ratings)
            {
                <div class="mb-3">
                    <div class="d-flex justify-content-between mb-1">
                        <span class="fw-semibold">@r.Category</span>
                        <span class="text-muted">@r.Score / 5</span>
                    </div>

                    <div class="progress" style="height: 8px;">
                        <div class="progress-bar bg-primary"
                             role="progressbar"
                             style="width:@(r.Score * 20)%"
                             aria-valuenow="@r.Score"
                             aria-valuemin="0"
                             aria-valuemax="5">
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- ===== KOMENTARZ ===== -->
        @if (!string.IsNullOrWhiteSpace(Model.Comment))
        {
            <hr />

            <div class="mt-3">
                <h6 class="fw-semibold mb-2">
                    <i class="bi bi-chat-left-text me-1"></i>
                    Komentarz
                </h6>
                <div class="p-3 bg-light rounded border">
                    @Model.Comment
                </div>
            </div>
        }

    </div>
</div>

<a asp-action="Index" class="btn btn-outline-secondary">
    <i class="bi bi-arrow-left"></i>
    Wróć do listy opinii
</a>
